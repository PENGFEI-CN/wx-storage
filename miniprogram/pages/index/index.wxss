page{
  height:100%;
  width:100%;
  border: 2rpx solid grey;
}
.history-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #DDD;
}
.bgimg{
  top:0;
  left:0;
  z-index: -1;
  position: absolute;
  width: 100vw;
  height:70vh;
  margin-top: 30vh;
}
.container{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: colume;
  align-items:center; 
  justify-content: center;
  padding:0;
}
.things{
  width:95%;
  height:95%;
  display: flex;
  flex-direction: colume;
  justify-content: center;
  border-left: 2rpx solid grey;
  box-shadow: 0 2rpx gray;
}
.goods{
  margin-top:100rpx;
  font-size: 20px;
  color: rgb(92, 92, 92);
  text-align:center;
}
.goods .text{
  display: block;
  margin: 40rpx;
}
.dangers{
  font-size: 20px;
  text-align:center;
  border: 1rpx solid rgb(224, 184, 184);
  box-shadow: 0 2rpx gray;
  padding: 100rpx 0;
}

.date {
  font-size: 30rpx;
  border-left: 10rpx solid #7ED321;
  padding-left: 10rpx;
  margin-top: 30rpx;
  font-weight: bold;
}

.action-icon {
  width: 100rpx;
  font-size: 30rpx
}
.ripple {
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 100%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
    overflow: hidden
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(12);
    transform: scale(12);
    background-color: transparent;
    }
}
.action-icon.create, .action-icon.restart {
  color: #7ED321;
}

.action-icon.delete, .action-icon.finish {
  color: #9B9B9B;
}

.action-with-time {
  display: flex;
  flex-direction: column;
}

.action-with-time .action-icon {
  flex: 1;
}

.action-with-time .time {
  height: 30rpx;
  font-size: 28rpx;
  color: #9B9B9B;
}

.todo {
  flex: 1;
}

.empty {
  margin-bottom:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  font-size: 60rpx;
  margin: 200rpx 50rpx 50rpx;
  color: #9B9B9B;
}

.empty .content {
  color: #9B9B9B;
  text-align: center;
}

.action {
  font-size: 30rpx;
  padding: 20rpx 0;
}

.action.clear, .action.finishAll {
  color: #9B9B9B;
}

.action.restartAll {
  color: #7ED321;
}
